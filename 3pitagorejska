using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            double a, b, c;

            Console.Write("Podaj wartość dla boku a= ");
            a = Convert.ToDouble(Console.ReadLine());
            Console.Write("Podaj wartość dla boku b= ");
            b = Convert.ToDouble(Console.ReadLine());
            Console.Write("Podaj wartość dla boku c= ");
            c = Convert.ToDouble(Console.ReadLine());

            //sprawdza czy wartości tworzą trójkę pitagorejską (według wzoru):
            if ((a * a) + (b * b) == (c * c))
                Console.WriteLine("Podane wartości a= {0}, b= {1} i c= {2}, składają się na trójkę pitagorejską", a, b, c);
            else
                Console.WriteLine("Podane wartości a= {0}, b= {1} i c= {2}, nie tworzą trójki pitagorejskiej", a, b, c);

            Console.ReadLine();
        }
    }
}
