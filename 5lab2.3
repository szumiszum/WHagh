using System;
					
public class Macierz
{
	public void macierz()
	{
		int size = 10;
		int[,] tab = new int[size, size];
		int i, j;
		
		for(i=0; i<size; i++)
		{
			for(j=0; j<size; j++)
			{
				if (i==j)
				{
					tab[i, j] = i;
				}
				Console.WriteLine(tab[i, j]);
			}
		}
	}
}

public class Program
{	
	public static void Main(string[] args)
	{

		Macierz m = new Macierz();
		//wywołuje funkcję
		m.macierz();
	}
}
